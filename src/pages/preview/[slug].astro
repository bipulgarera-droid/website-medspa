---
import MainLayout from '../../layouts/MainLayout.astro';
import MainApp from '../../components/react/MainApp';

// For static generation - return empty array to enable fallback for all slugs
export function getStaticPaths() {
  // Return empty - all slugs will be generated on-demand client-side
  return [
    { params: { slug: 'demo' } } // Single placeholder for build
  ];
}

// Get the slug from the URL
const { slug } = Astro.params;
---

<MainLayout title="Voice AI Template">
  <MainApp client:load slug={slug} />
</MainLayout>
